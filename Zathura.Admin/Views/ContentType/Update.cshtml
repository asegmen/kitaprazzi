@model Kitaprazzi.Data.Model.ContentType
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    @Html.HiddenFor(x=> x.ID)
                    <form role="form">
                        
                        <div class="form-group">
                            <label for="exampleInputEmail1">İçerik Tipi Adı</label>
                            @Html.TextBoxFor(x => x.Name, new {@class = "form-control", id = "contentTypeName", placeholder = "İçerik Tipi Adı"})
                        </div>
                      
                        <div class="form-group">
                            <label for="exampleInputEmail1">Status</label>
                            @Html.DropDownListFor(model => model.Status, new SelectList(ViewBag.StatusList, "Value", "Name"), ("Select Item"), new { @class = "form-control", id = "status" })
                        </div>
                        <a href="#" class="btn btn-default" onclick="UpdateContentType()">Kaydet</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Basic form -->

</div>

