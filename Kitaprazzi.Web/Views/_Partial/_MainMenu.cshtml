@model Kitaprazzi.Data.Model.Category
@{
    var subCategories = ViewBag.SubCategories as List<Kitaprazzi.Data.Model.Category>;
    var lessonList = ViewBag.LessonList as List<Kitaprazzi.Data.Model.Lesson>;
    if (subCategories != null && subCategories.Any())
    {

        <li class="main-menu-item has-submenu">
            <span class="main-menu-item-link" title="">
                <a href="@Model.Url">
                    <span class="main-menu-item-wrapper">
                        @Model.Name.ToUpper()
                        <i class="fa fa-chevron-down"></i>
                    </span>
                </a>
                

                <div class="wide-menu">
                    @foreach (var subCategory in subCategories.Where(x=> x.CategoryID == Model.ID))
                    {
                    <span class="col-12 col-lg sub-menu-wrapper">
                        <a href="@subCategory.Url">
                            <span class="sub-menu-title">@subCategory.Name</span>
                        </a>
                        @{
                            var lessons = lessonList.Where(x=> subCategory.LessonIDs != null &&  (bool)subCategory.LessonIDs?.Contains(x.ID.ToString()) );
                            if (lessons != null && lessons.Any())
                            {
                            <ul class="sub-menu">
                                @foreach (var lesson in lessons)
                                {
                                    <li class="sub-menu-item"><a href="@($"{subCategory.Url}?l={lesson.ID}")" title="">@lesson.Name</a></li>
                                }
                            </ul>
                            }
                        }

                    </span>
                    }
                </div>
            </span>
        </li>

    }
    else
    {
        <li class="main-menu-item">
            <a class="main-menu-item-link" href="@Model.Url" title="@Model.Name"><span class="main-menu-item-wrapper">@Model.Name.ToUpper()</span></a>
        </li>
    }

}
