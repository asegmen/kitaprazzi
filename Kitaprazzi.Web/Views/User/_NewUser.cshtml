@model Kitaprazzi.Data.Model.User
@{ 
    ViewBag.Title = "Kitaprazzi Üyelik Ekranı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mb">
    <div class="row">
        <div class="col-12">
            <div class="title-row">
                <div class="main-title">Yeni Üyelik</div>
            </div>
            <div class="membership">
                <h3>Üye olmak için aşağıdaki alanları doldurunuz</h3>
                @using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class="row"}))
                {
                    @Html.AntiForgeryToken()

                <form class="row" role="form">
                    <div class="col-12 col-md-4 col-lg-3">
                        @Html.TextBoxFor(x => x.Name, new { id = "UserName", placeholder = "Adınız" })
                    </div>
                    <div class="col-12 col-md-4 col-lg-3">
                        @Html.TextBoxFor(x => x.Surname, new { id = "Surname", placeholder = "Soyadınız" })
                    </div>
                    <div class="col-12 col-md-4 col-lg-3">
                        @Html.TextBoxFor(x => x.Email, new { id = "EmailAdress", placeholder = "E-mail adresiniz" })
                    </div>
                    <div class="col-12 col-md-4 col-lg-3">
                        @Html.PasswordFor(x => x.Password, new { id = "Password", placeholder = "Şifreniz" })
                    </div>
                    <div class="col-12 col-md-4 col-lg-3">
                        <input type="submit" value="Kaydet" />
                    </div>
                    <div class="col options">
                        <a href="javascript:;" title="">Zaten üyeyim</a>
                    </div>
                    <div class="col-12">
                        <span class="message">@Html.ValidationSummary()</span>
                    </div>
                </form>
                }
            </div>
        </div>
    </div>
</div>